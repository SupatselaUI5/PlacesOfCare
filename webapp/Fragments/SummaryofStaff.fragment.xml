					</ComboBox>
					<Label xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:sap.ui.layout.form="sap.ui.layout.form" text="Disabled"/>
					<ComboBox xmlns="sap.m">
						<items>
							<core:Item xmlns:core="sap.ui.core" key="item-1-key" text="No" id="item70"/>
							<core:Item xmlns:core="sap.ui.core" key="item-2-key" text="Yes" id="item71"/>
