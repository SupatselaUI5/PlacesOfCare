							<core:Item xmlns:core="sap.ui.core" key="item-1-key" text="Yes" id="item312"/>
							<core:Item xmlns:core="sap.ui.core" key="item-2-key" text="No" id="item313"/>
						</items>
					</ComboBox>
					<Label xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:sap.ui.layout.form="sap.ui.layout.form" text="Gross Monthly Salary Specify"/>
